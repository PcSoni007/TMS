<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".fragments.AddBidFragment">


    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/lyt_parent"
        style="@style/RippleStyleBlack"
        android:layout_width="match_parent"
        android:background="@drawable/shadow"
        android:layout_margin="8dp"
        app:mrl_rippleRoundedCorners="8dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/addVehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_vehicles1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Vehicles"
                    android:textAlignment="center"
                    android:layout_below="@+id/img1"
                    android:textColor="@color/black"

                    />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </com.balysv.materialripple.MaterialRippleLayout>


    <com.balysv.materialripple.MaterialRippleLayout
        style="@style/RippleStyleBlack"
        android:layout_width="match_parent"
        app:mrl_rippleRoundedCorners="8dp"
        android:background="@drawable/shadow"
        android:layout_margin="8dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/addBid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow"
            app:cardBackgroundColor="@color/white"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/img2"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/bidding" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:text="Add Vehicle For Bidding"
                    android:layout_below="@+id/img2"
                    android:textColor="@color/black"

                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </com.balysv.materialripple.MaterialRippleLayout>




    <com.balysv.materialripple.MaterialRippleLayout
        style="@style/RippleStyleBlack"
        android:layout_width="match_parent"
        android:background="@drawable/shadow"
        android:layout_margin="8dp"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleRoundedCorners="8dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/addJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/ly3"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/add"
                    android:id="@+id/img3"
                    android:layout_centerInParent="true"
                    android:tag="Select Image From Files" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:textAlignment="center"
                    android:text="Add Jobs"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/img3"
                    android:textColor="@color/black"

                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </com.balysv.materialripple.MaterialRippleLayout>



</LinearLayout>