<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.prakhar.tms">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="UnusedAttribute">
        <activity android:name=".ui.Demo"/>
        <activity android:name=".ui.AddUserDetails"/>
        <activity android:name=".ui.AddVehicle" />
        <activity android:name=".ui.AddJobs" />
        <activity android:name=".ui.AddBidding" />
        <activity android:name=".ui.UserProfile" />
        <activity android:name=".ui.SignupActivity" />
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.HomePage"/>
        <activity android:name=".MainActivity" />
    </application>

</manifest>